!!! 5
%html 
  %head
    %title= PRODUCT['name']
    = stylesheet_link_tag    "application" 
    = javascript_include_tag "application"
    = csrf_meta_tags 
    = javascript_include_tag "https://js.stripe.com/v1/" 
    = javascript_tag "Stripe.publishableKey = '#{STRIPE_PUBLISHABLE_KEY}';" 
  %body 
    
    .topbar
      .fill
        .container
          %a.brand{:href => '/'}= PRODUCT['name']
          %ul.nav
            %li= link_to 'Preview', '#preview'
            %li= link_to 'Testimonials', '#testimonials'
            %li= link_to 'Buy Now', '#purchase'
      
    = yield

